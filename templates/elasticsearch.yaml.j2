                                                               
cluster.name: {{ es_cluster_name }}
node.name: {{ es_node_name }}
node.roles: {{ es_node_roles[es_node_name] }}

network.host: 0.0.0.0
http.port: {{ http_port }}
transport.port: {{ transport_port }}

discovery.seed_hosts: {{ host_ip:transport_port | to_json }}
cluster.initial_master_nodes: {{ es_nodes | to_json }}

# path.data: /var/lib/elasticsearch
# path.logs: /var/log/elasticsearch

xpack.security.enabled: true

xpack.security.transport.ssl.enabled: true
xpack.security.transport.ssl.keystore.path: "{{ es_cert_dest }}"
xpack.security.transport.ssl.truststore.path: "{{ es_cert_dest }}"
xpack.security.transport.ssl.verification_mode: certificate

xpack.security.http.ssl.enabled: true
xpack.security.http.ssl.keystore.path: "{{ es_cert_dest }}"
xpack.security.http.ssl.truststore.path: "{{ es_cert_dest }}"